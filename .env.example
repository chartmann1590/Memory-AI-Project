# .env file

# Flask app settings
FLASK_APP=run.py
FLASK_ENV=development

# SQLAlchemy settings
SQLALCHEMY_DATABASE_URI=sqlite:///site.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Secret key for session management (change before production)
SECRET_KEY=your_secret_key_here

# Authentik SSO configuration (adjust URLs/credentials based on your deployment)
AUTHENTIK_SSO_URL=https://authentik.example.com
AUTHENTIK_CLIENT_ID=your_client_id_here
AUTHENTIK_CLIENT_SECRET=your_client_secret_here
AUTHENTIK_REDIRECT_URI=http://localhost:5000/auth/sso/callback

#Ollama API
OLLAMA_API_URL="http://localhost:11434/api/generate/"
OLLAMA_MODEL=llama3.2
